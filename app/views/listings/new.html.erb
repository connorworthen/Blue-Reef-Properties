<h1>New Listing</h1>

<%= form_for @listing, :url => { :action => "create" } do |f| %>

<%= f.label :address%>
<%= f.text_field :address%>
<br><br>
<%= f.label :city %>
<%= f.text_field :city%>
<br><br>
<%= f.label :zipcode %>
<%= f.text_field :zipcode %>
<br><br>
<%= f.label :state %>
<%= f.text_field :state %>
<br><br>
<%= f.label :country %>
<%= f.text_field :country %>
<br><br>
<%= f.label :bedroom %>
<%= f.number_field :bedroom %>
<br><br>
<%= f.label :bathroom %>
<%= f.number_field :bathroom %>
<br><br>
<%= f.label :price %>
<%= f.number_field :price %>
<br><br>
<%= f.label :square_feet %>
<%= f.number_field :square_feet %>
<br><br>
<%= f.submit %>

<%end%>